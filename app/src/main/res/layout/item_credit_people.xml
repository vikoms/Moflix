<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="125dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:contentDescription="@string/text_image_poster"
        android:id="@+id/img_item_credit_poster_detail"
        android:layout_width="0dp"
        android:layout_height="165dp"
        android:scaleType="centerCrop"
        android:transitionName="@string/text_transition_poster"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/item_1" />

    <ImageView
        android:id="@+id/gradient"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:src="@drawable/gradient_bg_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/img_item_credit_poster_detail" />


    <TextView
        android:id="@+id/tv_item_people_name_detail"
        style="@style/TextContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_item_people_charanddate_detail"
        app:layout_constraintEnd_toEndOf="@+id/img_item_pople_profile_detail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img_item_credit_poster_detail"
        app:layout_constraintTop_toTopOf="@+id/gradient"
        app:layout_constraintVertical_bias="1.0"
        tools:text="The Call of the Wild" />

    <TextView
        android:id="@+id/tv_item_people_charanddate_detail"
        style="@style/TextContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:padding="5dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="2020-02-12" />


</androidx.constraintlayout.widget.ConstraintLayout>