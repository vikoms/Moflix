<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="125dp"
    android:layout_height="225dp"
    android:layout_marginEnd="5dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:contentDescription="@string/text_image_poster"
        android:id="@+id/item_img_1"
        android:layout_width="0dp"
        android:layout_height="165dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:transitionName="@string/text_transition_poster"
        tools:src="@drawable/item_1" />

    <TextView
        android:id="@+id/item_text_1"
        android:layout_width="0dp"
        style="@style/TextContent"
        android:maxLines="2"
        android:textAlignment="textStart"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/item_img_1"
        app:layout_constraintStart_toStartOf="@+id/item_img_1"
        app:layout_constraintTop_toBottomOf="@+id/item_img_1"
        tools:text="The Call of the Wild" />


</androidx.constraintlayout.widget.ConstraintLayout>